<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup defaultName="JavaPEG @ver@" location="applications"/>
    
    <shortcut
     name="JavaPEG @ver@"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     type="Application"
     target="$JAVA_HOME\bin\javaw.exe" 
     commandLine="-jar -Xms64m -Xmx384m &quot;$INSTALL_PATH\JavaPEG.jar&quot;"
     iconFile="$INSTALL_PATH\javapeg.ico"
     workingDirectory="$INSTALL_PATH"
     description="This starts the program JavaPEG @ver@">
             
     <createForPack name="Core" />
   </shortcut>
     
   <shortcut
     name="Uninstall JavaPEG @ver@"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
     commandLine=""
     iconFile="%SystemRoot%\system32\SHELL32.dll"
     iconIndex="31" 
     description="This will uninstall JavPEG @ver@">
          
     <createForPack name="Core" />
   </shortcut>

</shortcuts>